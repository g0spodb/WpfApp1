        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" Background="#f1c0b2">
            <Frame x:Name="frame_autho_reg" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
